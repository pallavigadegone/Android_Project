<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/UserProfileDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Homepage">


    <!--    <RelativeLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="30dp"
        android:padding="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="697dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ProfileCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleX="1.5" />


            <ProgressBar
                android:id="@+id/ProfileprogressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfileCover"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="-40dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/DataContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/UserName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="23dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/UserName1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginBottom="20dp"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="23dp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90sp"
                    android:layout_marginTop="224dp"
                    android:layout_marginBottom="64dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/EmailIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/infoText"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/ic_baseline_email_24" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/infoText"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/EmailIcon"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="normal" />


                <ImageView
                    android:id="@+id/PhoneIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/EmailIcon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/ic_baseline_phone_24" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/EmailIcon"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/PhoneIcon"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="normal" />


                <ImageView
                    android:id="@+id/FavoriteIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PhoneIcon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/UserFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PhoneIcon"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/PhoneIcon"
                    android:background="@drawable/ok"
                    android:gravity="left"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/OrdersIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PhoneIcon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/ic_baseline_my_orders_24" />

                <Button
                    android:id="@+id/UserOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PhoneIcon"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/PhoneIcon"
                    android:background="@drawable/ok"
                    android:gravity="left"
                    android:text="My Uploads"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <!--            <Button-->
                <!--                android:id="@+id/log_out"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginTop="560dp"-->
                <!--                android:layout_marginBottom="312dp"-->
                <!--                android:onClick="@string/log_out"-->
                <!--                android:layout_marginLeft="140dp"-->
                <!--                android:text="@string/log_out"-->
                <!--                android:textSize="20sp" />-->

                <ImageView
                    android:id="@+id/UserImage"
                    android:layout_width="154dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile" />

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/OrdersIcon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/isettings" />

                <Button
                    android:id="@+id/setting1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/OrdersIcon"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/OrdersIcon"
                    android:background="@drawable/ok"
                    android:gravity="left"
                    android:text="Setting"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/log_out1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/ogout" />

                <Button
                    android:id="@+id/log_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/setting"
                    android:background="@drawable/ok"
                    android:gravity="left"
                    android:text="Log Out"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.drawerlayout.widget.DrawerLayout>
